---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import HoursTable from "../components/HoursTable.astro";

const base = import.meta.env.BASE_URL;

// SEO
const title = "Contact & Accès";
const description = "Contactez La Jardinerie à Toulouges. Adresse : 9 bis Boulevard de Clairfont, 66350 Toulouges. Téléphone, email, horaires et itinéraire.";
const keywords = ["contact restaurant Toulouges", "adresse La Jardinerie", "restaurant Perpignan contact", "itinéraire Toulouges"];

// Schedule
const schedule = [
  { day: "Lundi", hours: "", closed: true },
  { day: "Mardi", hours: "17h - 00h" },
  { day: "Mercredi", hours: "12h - 00h" },
  { day: "Jeudi", hours: "12h - 00h" },
  { day: "Vendredi", hours: "12h - 00h" },
  { day: "Samedi", hours: "15h - 00h" },
  { day: "Dimanche", hours: "", closed: true }
];

// Services
const services = [
  { label: "Service midi", value: "12h - 14h", note: "Mer, Jeu, Ven" },
  { label: "Service soir", value: "19h - 21h45", note: "Mar au Sam" }
];

// Access info
const accessInfo = [
  {
    icon: "car",
    title: "En voiture",
    description: "10 min de Perpignan centre. Parking gratuit disponible à proximité."
  },
  {
    icon: "wheelchair",
    title: "Accessibilité",
    description: "Restaurant accessible aux personnes à mobilité réduite."
  },
  {
    icon: "map",
    title: "Repères",
    description: "Sur le boulevard de Clairfont, face au parc municipal."
  }
];
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <!-- Hero -->
  <section class="relative py-16 sm:py-20 gradient-hero">
    <div class="container-site">
      <div class="max-w-3xl">
        <Badge variant="olive">Nous trouver</Badge>
        <h1 class="font-display text-display-lg sm:text-display-xl text-charcoal mt-4">
          Contact & Accès
        </h1>
        <p class="mt-4 text-lg text-charcoal/70">
          Une question, une demande de privatisation ou besoin d'un renseignement ?
          N'hésitez pas à nous contacter.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Map -->
  <Section padding="md">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Contact Cards -->
      <div class="space-y-6">
        <!-- Address -->
        <Card padding="md">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-olive/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display text-lg font-semibold text-charcoal mb-1">Adresse</h3>
              <address class="not-italic text-charcoal/70">
                9 bis Boulevard de Clairfont<br />
                66350 Toulouges<br />
                France
              </address>
              <a
                href="https://www.google.com/maps/search/?api=1&query=9+bis+Boulevard+de+Clairfont+66350+Toulouges+France"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 mt-2 text-sm text-olive hover:underline"
              >
                Ouvrir dans Google Maps
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          </div>
        </Card>

        <!-- Phone -->
        <Card padding="md">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-olive/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display text-lg font-semibold text-charcoal mb-1">Téléphone</h3>
              <a href="tel:+33400000000" class="text-xl font-semibold text-olive hover:underline">
                04 00 00 00 00
              </a>
              <p class="text-sm text-charcoal/50 mt-1">
                Aux horaires d'ouverture
              </p>
            </div>
          </div>
        </Card>

        <!-- Email -->
        <Card padding="md">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-olive/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display text-lg font-semibold text-charcoal mb-1">Email</h3>
              <a href="mailto:contact@lajardinerie.fr" class="text-olive hover:underline">
                contact@lajardinerie.fr
              </a>
              <p class="text-sm text-charcoal/50 mt-1">
                Réponse sous 24h
              </p>
            </div>
          </div>
        </Card>

        <!-- Social -->
        <Card padding="md">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-olive/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-olive" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h3 class="font-display text-lg font-semibold text-charcoal mb-1">Instagram</h3>
              <a
                href="https://www.instagram.com/lajardinerie_66/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-olive hover:underline"
              >
                @lajardinerie_66
              </a>
              <p class="text-sm text-charcoal/50 mt-1">
                Suivez notre actualité
              </p>
            </div>
          </div>
        </Card>
      </div>

      <!-- Map -->
      <div class="space-y-6">
        <div class="rounded-2xl overflow-hidden shadow-medium h-80 lg:h-full min-h-[320px] bg-charcoal/10">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2925.8766!2d2.8331!3d42.6756!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDLCsDQwJzMyLjIiTiAywrA0OSc1OS4yIkU!5e0!3m2!1sfr!2sfr!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Carte Google Maps - La Jardinerie Toulouges"
          ></iframe>
        </div>
      </div>
    </div>
  </Section>

  <!-- Hours -->
  <Section background="white" padding="md">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Opening Hours -->
        <div>
          <h2 class="font-display text-display-sm text-charcoal mb-6">
            Horaires d'ouverture
          </h2>
          <HoursTable schedule={schedule} />
        </div>

        <!-- Services -->
        <div>
          <h2 class="font-display text-display-sm text-charcoal mb-6">
            Services
          </h2>
          <Card padding="md">
            <div class="space-y-4">
              {services.map((service) => (
                <div class="flex justify-between items-center py-2 border-b border-charcoal/10 last:border-0">
                  <div>
                    <p class="font-medium text-charcoal">{service.label}</p>
                    <p class="text-sm text-charcoal/50">{service.note}</p>
                  </div>
                  <span class="font-display text-lg font-semibold text-olive">{service.value}</span>
                </div>
              ))}
            </div>
          </Card>
        </div>
      </div>
    </div>
  </Section>

  <!-- Access Info -->
  <Section padding="md">
    <div class="max-w-4xl mx-auto">
      <h2 class="font-display text-display-sm text-charcoal mb-8 text-center">
        Venir à La Jardinerie
      </h2>

      <div class="grid sm:grid-cols-3 gap-6">
        {accessInfo.map((info) => (
          <div class="text-center p-6 rounded-2xl bg-white/60">
            <div class="w-12 h-12 rounded-xl bg-olive/10 flex items-center justify-center mx-auto mb-4">
              {info.icon === "car" && (
                <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h8m-8 4h4m-4 4h8M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2z"/>
                </svg>
              )}
              {info.icon === "wheelchair" && (
                <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 1.657-1.343 3-3 3s-3-1.343-3-3 1.343-3 3-3 3 1.343 3 3zm0 0c0 3.866 3.134 7 7 7h2m-9-7V4m0 7H3"/>
                </svg>
              )}
              {info.icon === "map" && (
                <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
              )}
            </div>
            <h3 class="font-display font-semibold text-charcoal mb-2">{info.title}</h3>
            <p class="text-sm text-charcoal/70">{info.description}</p>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <Section background="olive" padding="md">
    <div class="text-center space-y-6">
      <h2 class="font-display text-display-sm text-cream">
        Prêt à réserver ?
      </h2>
      <p class="text-cream/80 max-w-xl mx-auto">
        Réservez votre table en quelques clics ou contactez-nous pour toute demande particulière.
      </p>
      <Button href={`${base}/reserver`} variant="secondary-light" size="lg">
        Réserver une table
      </Button>
    </div>
  </Section>
</BaseLayout>
