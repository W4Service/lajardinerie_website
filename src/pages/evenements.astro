---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import EventCard from "../components/EventCard.astro";

const base = import.meta.env.BASE_URL;

// SEO
const title = "Soirées & Événements";
const description = "Découvrez les soirées et événements de La Jardinerie à Toulouges : DJ sets, concerts acoustiques, soirées à thème. Ambiance guinguette garantie.";
const keywords = ["soirée DJ Toulouges", "concert Perpignan", "événement restaurant", "soirée guinguette"];

// Events data
const upcomingEvents = [
  {
    title: "Soirée DJ & Tapas — Saint-Valentin",
    date: "2026-02-14",
    time: "20h",
    description: "Célébrez l'amour à la guinguette ! DJ set, carte spéciale tapas à partager et cocktails signatures. Réservation conseillée.",
    badge: "Saint-Valentin",
    image: "assets/IMG_0541.png"
  },
  {
    title: "Concert Acoustique",
    date: "2026-02-21",
    time: "20h30",
    description: "Soirée musique live avec un duo guitare-voix. Répertoire varié, ambiance intimiste et plats gourmands.",
    image: "assets/IMG_0540.png"
  },
  {
    title: "Soirée Vins Naturels",
    date: "2026-02-28",
    time: "19h",
    description: "Dégustation commentée de vins naturels de la région, accompagnée d'une sélection de fromages et charcuteries.",
    badge: "Dégustation",
    image: "assets/IMG_0535.png"
  },
  {
    title: "DJ Set — Funky Friday",
    date: "2026-03-07",
    time: "21h",
    description: "Groove, funk et bonne humeur pour finir la semaine en beauté. Entrée libre, dancefloor ouvert !",
    image: "assets/IMG_0536.png"
  }
];

const pastHighlights = [
  {
    title: "Nouvel An 2026",
    date: "2025-12-31",
    description: "Une soirée mémorable avec DJ, menu festif et countdown sous les étoiles."
  },
  {
    title: "Beaujolais Nouveau",
    date: "2025-11-21",
    description: "Dégustation du millésime 2025 dans une ambiance conviviale."
  }
];
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <!-- Hero -->
  <section class="relative py-16 sm:py-20 gradient-hero">
    <div class="container-site">
      <div class="max-w-3xl">
        <Badge variant="terracotta">Agenda</Badge>
        <h1 class="font-display text-display-lg sm:text-display-xl text-charcoal mt-4">
          Soirées & Événements
        </h1>
        <p class="mt-4 text-lg text-charcoal/70 max-w-2xl">
          Musique live, DJ sets, soirées à thème, dégustations... À La Jardinerie,
          on mange bien et on fait la fête. Découvrez notre programmation.
        </p>
      </div>
    </div>
  </section>

  <!-- Upcoming Events -->
  <Section padding="md">
    <div class="mb-10">
      <h2 class="font-display text-display-sm text-charcoal">
        Prochains événements
      </h2>
      <p class="mt-2 text-charcoal/70">
        Réservez vite, les places sont limitées !
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {upcomingEvents.map((event) => (
        <EventCard
          title={event.title}
          date={event.date}
          time={event.time}
          description={event.description}
          badge={event.badge}
          image={event.image}
        />
      ))}
    </div>

    <div class="text-center mt-10">
      <Button href={`${base}reserver`} variant="primary" size="lg">
        Réserver pour un événement
      </Button>
    </div>
  </Section>

  <!-- Regular Programming -->
  <Section background="white" padding="md">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="font-display text-display-sm text-charcoal">
          Programmation régulière
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="card-hover text-center p-6">
          <div class="w-14 h-14 rounded-full bg-olive/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
            </svg>
          </div>
          <h3 class="font-display text-lg font-semibold text-charcoal mb-2">
            DJ Sets
          </h3>
          <p class="text-sm text-charcoal/70">
            Vendredi & samedi soirs, nos DJ résidents vous font danser jusqu'à minuit.
          </p>
        </div>

        <div class="card-hover text-center p-6">
          <div class="w-14 h-14 rounded-full bg-terracotta/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
            </svg>
          </div>
          <h3 class="font-display text-lg font-semibold text-charcoal mb-2">
            Concerts Live
          </h3>
          <p class="text-sm text-charcoal/70">
            1 à 2 fois par mois, des artistes locaux en acoustique ou en groupe.
          </p>
        </div>

        <div class="card-hover text-center p-6 sm:col-span-2 lg:col-span-1">
          <div class="w-14 h-14 rounded-full bg-olive/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"/>
            </svg>
          </div>
          <h3 class="font-display text-lg font-semibold text-charcoal mb-2">
            Soirées à Thème
          </h3>
          <p class="text-sm text-charcoal/70">
            Dégustations de vins, soirées tapas, événements saisonniers... Il y a toujours une raison de faire la fête.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Past Highlights -->
  <Section padding="md">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h2 class="font-display text-display-sm text-charcoal">
          Ils sont passés chez nous
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 gap-4">
        {pastHighlights.map((event) => (
          <div class="flex gap-4 p-4 rounded-xl bg-charcoal/5">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-charcoal/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-charcoal/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-charcoal">{event.title}</h3>
              <p class="text-sm text-charcoal/60">{event.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- Privatisation CTA -->
  <Section background="olive" padding="md">
    <div class="text-center space-y-6">
      <h2 class="font-display text-display-sm text-cream">
        Privatisez La Jardinerie pour vos événements
      </h2>
      <p class="text-cream/80 max-w-2xl mx-auto">
        Anniversaires, réunions de famille, séminaires d'entreprise, fêtes entre amis...
        Notre équipe s'adapte à vos envies pour créer un moment unique.
      </p>
      <Button href={`${base}contact`} variant="secondary" size="lg" class="border-cream text-cream hover:bg-cream hover:text-olive">
        Demander un devis
      </Button>
    </div>
  </Section>

  <!-- Newsletter / Follow -->
  <Section padding="md">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="font-display text-display-sm text-charcoal mb-4">
        Ne ratez aucun événement
      </h2>
      <p class="text-charcoal/70 mb-6">
        Suivez-nous sur Instagram pour être au courant de toutes nos soirées et événements.
      </p>
      <a
        href="https://www.instagram.com/lajardinerie_66/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 btn-primary"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
        </svg>
        Suivre @lajardinerie_66
      </a>
    </div>
  </Section>
</BaseLayout>

<!-- Events Schema -->
<script type="application/ld+json" is:inline>
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": [
    {
      "@type": "Event",
      "name": "Soirée DJ & Tapas — Saint-Valentin",
      "startDate": "2026-02-14T20:00:00+01:00",
      "endDate": "2026-02-15T00:00:00+01:00",
      "location": {
        "@type": "Place",
        "name": "La Jardinerie",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "9 bis Boulevard de Clairfont",
          "addressLocality": "Toulouges",
          "postalCode": "66350",
          "addressCountry": "FR"
        }
      },
      "description": "Célébrez l'amour à la guinguette ! DJ set, carte spéciale tapas à partager et cocktails signatures.",
      "organizer": {
        "@type": "Organization",
        "name": "La Jardinerie"
      }
    }
  ]
