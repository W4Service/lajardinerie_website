---
const base = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();

interface FooterLink {
  label: string;
  href: string;
  external?: boolean;
}

const navigationLinks: FooterLink[] = [
  { label: "Menu", href: "/menu" },
  { label: "Réserver", href: "/reserver" },
  { label: "Événements", href: "/evenements" },
  { label: "Le concept", href: "/concept" },
  { label: "Contact", href: "/contact" }
];

const legalLinks: FooterLink[] = [
  { label: "Mentions légales", href: "/mentions-legales" },
  { label: "Confidentialité", href: "/confidentialite" }
];

const socialLinks: FooterLink[] = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/lajardinerie_66/",
    external: true
  }
];
---

<footer class="bg-charcoal text-cream/90 mt-auto">
  <div class="container-site py-12 lg:py-16">
    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href={`${base}/`} class="inline-block">
          <span class="font-display text-2xl font-bold text-cream">
            La Jardinerie
          </span>
        </a>
        <p class="mt-3 text-cream/60 text-sm leading-relaxed">
          Bouillon le midi, guinguette le soir.<br />
          Grandes tablées, bons vins et moments à partager.
        </p>

        <!-- Social -->
        <div class="mt-5 flex gap-3">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-10 h-10 rounded-full bg-cream/10 hover:bg-olive transition-colors"
              aria-label={`Suivez-nous sur ${link.label}`}
            >
              {link.label === "Instagram" && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="font-display text-lg font-semibold text-cream mb-4">Navigation</h3>
        <ul class="space-y-2.5">
          {navigationLinks.map((link) => (
            <li>
              <a
                href={`${base}${link.href}`}
                class="text-cream/60 hover:text-cream transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-display text-lg font-semibold text-cream mb-4">Contact</h3>
        <address class="not-italic space-y-2.5 text-sm text-cream/60">
          <p>9 bis Boulevard de Clairfont</p>
          <p>66350 Toulouges</p>
          <p class="pt-2">
            <a href="tel:+33400000000" class="hover:text-cream transition-colors">
              04 00 00 00 00
            </a>
          </p>
          <p>
            <a href="mailto:contact@lajardinerie.fr" class="hover:text-cream transition-colors">
              contact@lajardinerie.fr
            </a>
          </p>
        </address>
      </div>

      <!-- Horaires -->
      <div>
        <h3 class="font-display text-lg font-semibold text-cream mb-4">Horaires</h3>
        <ul class="space-y-1.5 text-sm text-cream/60">
          <li class="flex justify-between">
            <span>Mardi</span>
            <span>17h - 00h</span>
          </li>
          <li class="flex justify-between">
            <span>Mercredi - Vendredi</span>
            <span>12h - 00h</span>
          </li>
          <li class="flex justify-between">
            <span>Samedi</span>
            <span>15h - 00h</span>
          </li>
          <li class="flex justify-between text-cream/40">
            <span>Dimanche - Lundi</span>
            <span>Fermé</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-cream/10 flex flex-col sm:flex-row items-center justify-between gap-4 text-xs text-cream/50">
      <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2">
        <p>&copy; {currentYear} La Jardinerie — Toulouges</p>
        {legalLinks.map((link) => (
          <a
            href={`${base}${link.href}`}
            class="hover:text-cream transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>
      <p>
        Site réalisé avec amour
        <span class="text-red-400" aria-label="coeur">♥</span>
        par
        <a
          href="https://w4s.fr"
          target="_blank"
          rel="noopener noreferrer"
          class="text-cream/70 hover:text-cream underline underline-offset-2 transition-colors"
        >
          W4S
        </a>
      </p>
    </div>
  </div>
</footer>
