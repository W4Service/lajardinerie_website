---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  class?: string;
}

const { items, class: className = "" } = Astro.props;
---

<div class={`space-y-3 ${className}`}>
  {items.map((item, index) => (
    <details
      class="group rounded-2xl border border-charcoal/10 bg-white/60 overflow-hidden"
    >
      <summary class="flex cursor-pointer items-center justify-between gap-4 p-5 font-medium hover:bg-charcoal/5 transition-colors list-none">
        <span>{item.question}</span>
        <svg
          class="w-5 h-5 text-olive shrink-0 transition-transform duration-200 group-open:rotate-180"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"
          />
        </svg>
      </summary>
      <div class="px-5 pb-5 text-charcoal/70 leading-relaxed">
        <p set:html={item.answer} />
      </div>
    </details>
  ))}
</div>

<!-- JSON-LD FAQ Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer.replace(/<[^>]*>/g, '') // Strip HTML for schema
    }
  }))
})} />
